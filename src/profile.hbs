---
email: "example@example.com"
login: "Admin"
first_name: "Иван"
second_name: "Иванов"
phone: "+7(123)123-12-12"
display_name: "avatar"
---
<html lang="ru">

<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

<head>
  <link rel="stylesheet" href="./styles.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
  <main>
    <div class="avabx">
      <img src="../static/avatar.jpg" class="cover">
    </div>
    <a class="backbtn" href="./chats.hbs">
      <span class="material-icons">arrow_back</span>
    </a>
    <div class="profile-box">
      <div>
        <form name="display_name_form">
          <label for="display_name">Имя в чате</label>
          <input name="display_name" type="email" value="{{display_name}}">
          <span class="material-icons" onclick="display_name_form.submit()">edit</span>
        </form>
        <form name="email_form">
          <label for="email">Почта</label>
          <input name="email" type="email" value="{{email}}">
          <span class="material-icons" onclick="email_form.submit()">edit</span>
        </form>
        <form name="login_form">
          <label for="login">Логин</label>
          <input name="login" type="text" value="{{login}}">
          <span class="material-icons" onclick="login_form.submit()">edit</span>
        </form>
        <form name="first_name_form">
          <label for="first_name">Имя</label>
          <input name="first_name" type="text" value="{{first_name}}">
          <span class="material-icons" onclick="first_name_form.submit()">edit</span>
        </form>
        <form name="second_name_form">
          <label for="second_name">Фамилия</label>
          <input name="second_name" type="text" value="{{second_name}}">
          <span class="material-icons" onclick="second_name_form.submit()">edit</span>
        </form>
        <form name="phone_form">
          <label for="phone">Номер телефона</label>
          <input name="phone" type="phone" value="{{phone}}">
          <span class="material-icons" onclick="phone_form.submit()">edit</span>
        </form>
      </div>
    </div>
  </main>
</body>

</html>
